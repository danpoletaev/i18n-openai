{
  "name": "i18n-openai",
  "version": "1.0.0",
  "description": "Automatic i18n translation using openai",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "clean": "tsc --build --clean",
    "test": "mocha -r ts-node/register 'test/**/*.ts'",
    "start": "npm run build && node bin/i18n-openai.mjs",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json"
  },
  "bin": {
    "i18n-openai": "./bin/next-sitemap.mjs",
    "i18n-openai-cjs": "./bin/next-sitemap.cjs"
  },
  "author": "Daniil Poletaev",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/mock-fs": "^4.13.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "mock-fs": "^5.2.0",
    "prettier": "^3.0.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.1.6"
  },
  "files": [
    "lib/**/*",
    "dist",
    "bin"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "dependencies": {
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "figlet": "^1.6.0",
    "openai": "^3.3.0"
  }
}

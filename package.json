{
  "name": "i18n-openai",
  "version": "0.0.6",
  "description": "Automatic i18n translation using openai",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "tsc --build --clean",
    "test": "mocha -r ts-node/register 'test/**/*.ts'",
    "start": "npm run build && node dist/index.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "npx eslint ."
  },
  "bin": {
    "i18n-openai": "./dist/index.js"
  },
  "author": "Daniil Poletaev",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/mock-fs": "^4.13.1",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "chai": "^4.3.7",
    "eslint": "^8.46.0",
    "mocha": "^10.2.0",
    "mock-fs": "^5.2.0",
    "prettier": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "files": [
    "lib/**/*",
    "dist",
    "bin"
  ],
  "dependencies": {
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "figlet": "^1.6.0",
    "openai": "^3.3.0"
  }
}
